<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile">


    <ImageView
        android:id="@+id/header_cover_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:onClick="addImageClicked"
        android:scaleType="centerCrop"
        android:src="@color/colorAccent" />

    <ImageView
        android:id="@+id/EditProfile_profile_Pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:elevation="5dp"
        android:onClick="addImageClicked"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/profile" />

    <ImageView
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/header_cover_image"
        android:src="#ebca0707"
        android:paddingBottom="24dp" />


    <EditText
        android:id="@+id/EditProfile_name"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/EditProfile_profile_Pic"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        android:text="Name"
        android:elevation="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="14dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/EditProfile_bio"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/EditProfile_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:imeOptions="actionGo"
        android:singleLine="true"
        android:elevation="5dp"
        android:text="Bio"
        android:textColor="#000000"
        android:textSize="12dp" />


    <TextView
        android:id="@+id/user_profile_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_layout"
        android:layout_margin="5dp"
        android:background="#fff"
        android:clickable="true"
        android:textColor="@color/colorPrimary"
        android:elevation="4dp"
        android:padding="20dp"
        android:text="Email" />


    <Button
        android:id="@+id/EditProfile_edit"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/user_profile_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/animated_button"
        android:onClick="editClicked"
        android:text="edit"
        android:textColor="#FAFAFA" />

</RelativeLayout>