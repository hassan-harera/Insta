<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">


    <ImageView
        android:layout_marginStart="0dp"
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="302dp"
        android:src="#1D1A2F" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_marginStart="5.27dp"
        android:layout_marginTop="-40dp"
        android:layout_below="@+id/image1"
        android:src="#1D1A2F"
        android:rotation="45" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/image1"
        android:text="Login"
        android:textColor="#1A1A1A"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="289.15dp"
        android:layout_height="125.15dp"
        android:layout_below="@+id/text1"
        android:layout_marginLeft="38.85dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:weightSum="2">

        <EditText
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="true"
            android:textAlignment="textStart" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:hint="Password"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:textAlignment="textStart" />
    </LinearLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="187.5dp"
        android:layout_height="70dp"
        android:layout_marginLeft="222dp"
        android:layout_marginTop="80dp"
        android:background="#1D1A2F"
        android:onClick="loginClicked"
        android:layout_below="@id/linear"
        android:text="login"
        android:textColor="#FAFAFA" />

    <TextView
        android:id="@+id/register_text"
        android:layout_width="134dp"
        android:layout_height="35dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="95dp"
        android:onClick="registerClicked"
        android:layout_below="@+id/linear"
        android:text="Donâ€™t have an account? SIGN UP"
        android:textColor="#707070" />
</RelativeLayout>