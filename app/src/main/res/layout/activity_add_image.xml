<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.whiteside.insta.ui.add_image.AddImageViewModel" />

        <variable
            name="post"
            type="com.whiteside.insta.ui.feed.Post" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        tools:context=".ui.add_image.AddImage">

        <!--    TODO plus mark on the image -->
        <ImageView
            android:id="@+id/add_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_weight="7"
            android:onClick="@{(view) -> viewModel.addImageClicked(view, post)}"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/add_image" />

        <EditText
            android:id="@+id/caption"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_20sdp"
            android:layout_weight="2"
            android:background="#FFF"
            android:gravity="top"
            android:hint="@string/caption"
            android:padding="@dimen/_4sdp"
            android:text="@={post.caption,default=@string/caption}"
            android:textColor="#88000000"
            android:textColorHint="#88000000"
            android:textSize="@dimen/_18sdp" />

        <Button
            android:id="@+id/add"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/blue_round_button"
            android:onClick="@{(view) -> viewModel.addClicked(view, post)}"
            android:text="@string/add"
            android:textColor="#0984e3"
            android:textSize="@dimen/_16sdp" />
    </LinearLayout>
</layout>